{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-commit-tdd.sh"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-test-exists.sh $CLAUDE_FILE_PATHS"
      }
    ]
  }
}

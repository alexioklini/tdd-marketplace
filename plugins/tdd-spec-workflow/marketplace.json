{
  "$schema": "https://claude.ai/schemas/plugin-marketplace-v1.json",
  
  "name": "tdd-spec-workflow",
  "displayName": "TDD Spec Workflow",
  "version": "2.0.0",
  "description": "Test-Driven Development with spec-workflow-mcp and Ralph Wiggum autonomous loops. Enforces TDD methodology across any language with real-time dashboard and overnight batch execution.",
  "shortDescription": "TDD + Spec-Driven Development + Ralph Wiggum autonomous loops",
  

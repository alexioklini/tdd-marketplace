  "screenshots": [
    {
      "url": "https://github.com/your-org/tdd-spec-workflow/raw/main/assets/screenshots/dashboard.png",
      "caption": "Real-time spec-workflow dashboard showing task progress"
    },
    {
      "url": "https://github.com/your-org/tdd-spec-workflow/raw/main/assets/screenshots/ralph-loop.png",
